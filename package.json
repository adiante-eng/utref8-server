{
  "name": "type-script-primer",
  "version": "1.0.0",
  "description": "Andiante TypeScript boilerplate to use with VSCode",
  "main": "index.js",
  "repository": "https://github.com/andiante-eng/typescript-starter.git",
  "scripts": {
    "clean": "rm -rf out",
    "start": "tsc && node out/src/index.js",
    "build": "tsc",
    "test": "mocha --require ts-node/register 'src/**/*.{spec.ts, spec.js, test.ts, test.js}'",
    "test-watch": "mocha --require ts-node/register 'src/**/*.{spec.ts, spec.js, test.ts, test.js}' --watch --watch-files 'src/**/*.{js, ts}' --reporter min",
    "test-report": "nyc --reporter=html --reporter=text mocha --require ts-node/register 'src/**/*.{spec.ts, spec.js, test.ts, test.js}' --reporter mochawesome --reporter-options reportDir=reports",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint src/**/*.ts --fix",
      "git add"
    ]
  },
  "author": "Andiante Engineering",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.54",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.3",
    "mochawesome": "^4.1.0",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
